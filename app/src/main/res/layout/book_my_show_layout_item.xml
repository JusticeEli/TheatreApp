<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="25dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="15dp">
    <LinearLayout
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Film Name:  "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/filmNameTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avengers End Game"
                android:textSize="15sp"
                android:textColor="@color/colorRed"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/showTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Time:  "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/showTimeTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feb 3rd 10:00AM"
                android:textSize="15sp"
                android:textColor="@color/colorRed"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language:  "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/languageTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textSize="15sp"
                android:textColor="@color/colorRed"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Description:  "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/categoryDescriptionTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action,Sci Fi"
                android:textSize="15sp"
                android:textColor="@color/colorRed"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cast:  "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/castTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avengers End Game"
                android:textSize="15sp"
                android:textColor="@color/colorRed"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Seat:  "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/availableSeatTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="51"
                android:textSize="15sp"
                android:textColor="@color/colorRed"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City and Locality:  "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/cityLocalityTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nairobi- Garden City"
                android:textSize="15sp"
                android:textColor="@color/colorRed"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Now"

                android:id="@+id/bookNowBtn"
                android:layout_marginRight="15dp"
                android:background="@drawable/button"
                android:textColor="@color/colorWhite"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feed Back"
                android:id="@+id/feedbackBtn"
                android:background="@drawable/button"
                android:textColor="@color/colorWhite"/>


        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>