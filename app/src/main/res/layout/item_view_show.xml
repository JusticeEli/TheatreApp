<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:padding="5dp"
        android:background="@drawable/button"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Film Name:  "
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/filmNameTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avengers End Game"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language:  "
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/languageTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Description:  "
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/categoryDescriptionTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Action,Sci Fi"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary:  "
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/summaryTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avengers End Game"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cast:  "
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/castTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avengers End Game"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show:  "
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avengers End Game"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seat:  "
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seatTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avengers End Game"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City and Locality:  "
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cityLocalityTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avengers End Game"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/updateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/button"
                android:text="Update" />

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Delete" />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>